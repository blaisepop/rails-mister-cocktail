<h1> <%= @cocktail.name %></h1>
<div class="img-fluid" alt="Responsive image">
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 500, crop: :fill , g_auto: :kitchen %>
</div>
<ul class="list-group">
<% @cocktail.doses.each do |dose| %>
<li class="list-group-item"><%= dose.description %> <%= dose.ingredient.name %>
<i class="far fa-trash-alt"></i><%= link_to "Delete",dose_path(dose), method: :delete  %></li>
<% end %>
</ul>
<%= link_to "Back to cocktail list", cocktails_path, :class => "btn btn-primary"  %>

<%= link_to "Create new dose", new_cocktail_dose_path(@cocktail), :class => "btn btn-primary"  %>

