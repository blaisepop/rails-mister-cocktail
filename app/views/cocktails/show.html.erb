<div class="container">
<h1> <%= @cocktail.name %></h1>
<div class="img-fluid" alt="Responsive image">
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 500, crop: :fill , g_auto: :kitchen %>
</div>
<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %> <%= dose.ingredient.name %>
<i class="far fa-trash-alt"></i><%= link_to "Delete",dose_path(dose), method: :delete  %></li>
<% end %>
</ul>

<%= link_to "Back to cocktail list", cocktails_path  %>
<%= link_to "Create new dose", new_cocktail_dose_path(@cocktail)  %>
</div>
